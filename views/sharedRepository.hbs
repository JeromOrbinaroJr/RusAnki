<style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1; /* Ensures the container takes the remaining space */
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .deck-container {
            width: 100%;
            margin-bottom: 40px;
        }

        .carousel {
            width: 100%;
        }

        .flashcard-small {
            width: 200px;
            height: 300px;
            margin: 0; /* Убираем отступы вокруг карточки */
            perspective: 1000px;
            border: 2px solid #000879; /* Обводка */
            border-radius: 10px; /* Скругленные углы */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Тень */
            background-color: #fff; /* Белый фон для непрозрачности */
            opacity: 1; /* Полная непрозрачность */
        }

        .flashcard-inner-small {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }

        .flashcard-front-small, .flashcard-back-small {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px; /* Скругленные углы */
            background-color: #fff; /* Белый фон для непрозрачности */
            opacity: 1; /* Полная непрозрачность */
        }

        .flashcard-back-small {
            transform: rotateY(180deg);
        }

        .carousel-item {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0; /* Убираем дополнительные отступы */
        }
        .container-fluid {
            width: 100%;
            margin: 0 auto;
            padding: 0 2rem; /* Adjust padding as needed */
            box-sizing: border-box;
        }
        .btn {
            background-color: rgb(10,41,87);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
    <i class="large material-icons icon-spacing">public</i> 
    <div class="container"> 
        {{#each decks}}
            <div class="deck-container">
                <h2>{{this.name}}</h2>
                <p>Тематика: {{this.theme}}</p>
                <p>Направление: {{this.direction}}</p>
                <div class="carousel">
                    {{#each this.cards}}
                        <a class="carousel-item" href="#{{../this.name}}!">
                            <div class="flashcard-small">
                                <div class="flashcard-inner-small">
                                    <div class="flashcard-front-small">
                                        <p>{{this.question}}</p>
                                    </div>
                                    <div class="flashcard-back-small">
                                        <p>{{this.answer}}</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {{/each}}
                    {{#unless this.cards.length}}
                        <a class="carousel-item" href="#!">
                            <div class="flashcard-small">
                                <div class="flashcard-inner-small">
                                    <div class="flashcard-front-small">
                                        <p>Нет карточек</p>
                                    </div>
                                    <div class="flashcard-back-small">
                                        <p>Добавьте карточки</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {{/unless}}
                </div>
                <form action="/shared-repository/add-to-library/{{this.id}}" method="POST">
                    <button type="submit" class="btn">Добавить в библиотеку</button>
                </form>
            </div>
        {{/each}}
    </div>
</div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const carousels = document.querySelectorAll('.carousel');
            M.Carousel.init(carousels, {
                fullWidth: false,
                indicators: true,
                padding: 20,
                numVisible: 5,
                shift: 0,
            });
        });
    </script>
</body>